<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">

  <name>libsurvive_ros2</name>

  <version>0.0.1</version>

  <description>libsurvive driver for ROS2</description>

  <maintainer email="andrew.c.symington@gmail.com">Andrew Symington</maintainer>

  <license>MIT</license>

  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>diagnostic_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>
  
  <exec_depend>rosbridge_suite</exec_depend>
  <exec_depend>foxglove_bridge</exec_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>

</package>
